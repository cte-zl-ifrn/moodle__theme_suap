{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}
<div id="page-wrapper" class="d-print-block bg-green">

    {{{ output.standard_top_of_body_html }}}

    {{#isloggedin}}
        <div class="suap-backdrop" data-region="suap-backdrop">
            <div class="container-counter" id="container-counter">
                <div class="counter">
                    <div class="counter-header">
                        <a href="{{config.wwwroot}}" class="ava-name counter-label">{{sitename}}</a>
                        <button class="counter-toggler">    
                            {{#pix}}i/icon-fa-solid-code, theme_suap{{/pix}}
                        </button>
                    </div>
                    <div id="counter-content" {{#getUserPreference}}class="content-reverse"{{/getUserPreference}}>
                        <div id="content-part1" {{#getUserPreference}}class="content-original"{{/getUserPreference}}>
                            {{#usermenu}}
                            <div class="drawer-toggler" id="user-toggler" data-drawer="drawer-user">
                                {{> core/user_menu_metadata }}
                                <div class="user-info counter-label">
                                    <p class="user-name">
                                        {{userfullname}}
                                    </p>
                                    
                                    <span class="user-role">{{rolename}}</span>
                                </div>
                            </div>
                            {{/usermenu}}

                            {{# output.search_box }}
                                {{{ output.search_box }}}
                                <div class="divider border-left h-75 align-self-center mx-1"></div>
                            {{/output.search_box}}

                            <div class="drawer-toggler counter-option" data-drawer="drawer-notifications">
                                <i class="fa-regular fa-bell"></i>
                                <span class="counter-label">{{#str}} notifications, message {{/str}}</span>
                                <span class="count-notification hidden" data-region="count-container"></span>
                            </div>
                            <div id="message-drawer-toggle-{{uniqid}}" class="drawer-toggler counter-option" data-drawer="drawer-messages"> 
                                <i class="fa-regular fa-comment"></i>
                                <span class="counter-label">{{#str}} messages,core_message {{/str}}</span>
                                <span class="count-notification hidden" data-region="count-container"></span>
                            </div>
                            <div class="bug-box counter-option">
                                <i class="fa-solid fa-bug"></i>
                                <span class="counter-label">Bug</span>
                            </div>
                        </div>
                        <div id="content-part2">
                            {{#courseindex}}
                                <div class="drawer-toggler counter-option" data-drawer="drawer-index">
                                    <i class="fa-solid fa-align-left"></i>
                                    <span class="counter-label">{{#str}} drawer_course_index, theme_suap {{/str}}</span>
                                </div>
                            {{/courseindex}}
                            {{#hasblocks}}   
                                <div class="drawer-toggler counter-option" data-drawer="drawer-blocks">
                                    {{#pix}}i/icon-fa-solid-drawer, theme_suap{{/pix}}
                                    <span class="counter-label">{{#str}} drawer_blocks, theme_suap, {{/str}}</span>
                                </div>
                            {{/hasblocks}}
                        </div>
                    </div>  
                </div>
                <div class="drawers">
                    {{#usermenu}}
                    <div class="drawer-content" id="drawer-user">
                        <div class="drawer-header">
                            <div class="drawer-header-info">
                                <i class="fa-regular fa-user"></i>
                                <h2>{{#str}}  drawer_user, theme_suap {{/str}}</h2>
                            </div>
                            <a href="#" class="drawer-close" data-drawer="drawer-user">
                                <i class="fa-solid fa-xmark"></i>
                            </a>
                        </div>
                        <ul class="drawer-list">
                            {{> core/user_action_menu_items }}
                        </ul>
                                
                    </div>
                    {{/usermenu}}

                    <div class="drawer-content" id="drawer-notifications" data-userid={{userid}}> 

                        <div class="drawer-header" data-region="drawer-header">
                            <div class="drawer-header-info">
                                <i class="fa-regular fa-bell" aria-hidden="true"></i>
                                <a href="#" class="return-notification" data-action="return-list" aria-label="Retornar para lista de notificações">
                                    <i class="fa-solid fa-chevron-left" aria-hidden="true"></i>
                                </a>
                                <h2>{{#str}} notifications, message {{/str}}</h2>
                            </div>
                            <div class="drawer-header-tools">
                                <a class="tool-item" class="mark-all-read" href="#" data-action="mark-all-read">
                                    <i class="fa-regular fa-circle-check" aria-hidden="true"></i>
                                </a>
                                <a class="tool-item" href="{{config.wwwroot}}/message/notificationpreferences.php">
                                    <i class="fa fa-cog fa-fw" aria-hidden="true"></i>
                                </a>                                
                                <a class="tool-item drawer-close" href="#" data-drawer="drawer-notifications">
                                    <i class="fa-solid fa-xmark" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div> 
                        
                        <div class="drawer-body" data-region="notification-scroll">
                            <div class="notification_list" data-region="notification-list">
                                {{> theme_suap/notification_list}}
                            </div>
                            <span class="hidden" data-region="loading-icon-container">
                                {{> core/loading }}
                            </span>
                            <div class="notification-full hidden" data-region="notification-full"></div>
                        </div> 

                    </div>

                    <div class="drawer-content" id="drawer-messages">
                        {{{ output.standard_after_main_region_html }}}
                    </div>

                    <div class="drawer-content" id="drawer-index">
                        <div class="drawer-header">
                            <div class="drawer-header-info">
                                <i class="fa-solid fa-align-left"></i>
                                <h2>{{#str}} drawer_course_index, theme_suap {{/str}}</h2>
                            </div>
                            <div class="drawer-header-tools">
                                {{> theme_boost/courseindexdrawercontrols}}
                                <a href="#" class="drawer-close tool-item" data-drawer="drawer-user">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            </div>
                        </div>
                        {{#courseindex}}
                            {{< theme_boost/drawer }}
                                {{$id}}theme_boost-drawers-courseindex{{/id}}
                                {{$drawerheadercontent}}
                                    {{> theme_boost/courseindexdrawercontrols}}
                                {{/drawerheadercontent}}
                                {{$drawerclasses}}drawer {{#courseindexopen}}show{{/courseindexopen}}{{/drawerclasses}}
                                {{$drawercontent}}
                                    {{{courseindex}}}
                                {{/drawercontent}}
                                {{$drawerpreferencename}}drawer-open-index{{/drawerpreferencename}}
                                {{$drawerstate}}show-drawer-left{{/drawerstate}}
                                {{$tooltipplacement}}right{{/tooltipplacement}}
                                {{$closebuttontext}}{{#str}}closecourseindex, core{{/str}}{{/closebuttontext}}
                            {{/ theme_boost/drawer}}
                        {{/courseindex}}                      
                    </div>

                    <div class="drawer-content" id="drawer-blocks">
                        <div class="drawer-header">
                            <div class="drawer-header-info">
                                {{#pix}}i/icon-fa-solid-drawer-black, theme_suap{{/pix}}
                                <h2>{{#str}} drawer_blocks, theme_suap, {{/str}}</h2>
                            </div>
                            <div class="drawer-header-tools">
                                <a href="#" class="drawer-close tool-item" data-drawer="drawer-user">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            </div>
                        </div>
                        {{#hasblocks}}
                            {{< theme_boost/drawer }}
                                {{$id}}theme_boost-drawers-blocks{{/id}}
                                {{$drawerclasses}}drawer{{#blockdraweropen}} show{{/blockdraweropen}}{{/drawerclasses}}
                                {{$drawercontent}}
                                    <section class="d-print-none" aria-label="{{#str}}blocks{{/str}}">
                                        {{{ addblockbutton }}}
                                        {{{ sidepreblocks }}}
                                    </section>
                                {{/drawercontent}}
                                {{$drawerpreferencename}}drawer-open-block{{/drawerpreferencename}}
                                {{$forceopen}}{{#forceblockdraweropen}}1{{/forceblockdraweropen}}{{/forceopen}}
                                {{$drawerstate}}show-drawer-right{{/drawerstate}}
                                {{$tooltipplacement}}left{{/tooltipplacement}}
                                {{$drawercloseonresize}}1{{/drawercloseonresize}}
                                {{$closebuttontext}}{{#str}}closeblockdrawer, core{{/str}}{{/closebuttontext}}
                            {{/ theme_boost/drawer}}
                        {{/hasblocks}}
                    </div> 

                </div>
            </div>
        </div>
    {{/isloggedin}}

    {{#isloggedin}}
        <div id="navbar" class="frontpage-menu bg-green {{#isloggedin}} navbar-when-sidebar-opened {{/isloggedin}}">
            <nav class="frontpage-navbar-container" aria-label="{{#str}}sitemenubar, admin{{/str}}">
                <div class="frontpage-navbar-content">
                    <div class="frontpage-navbar-start-buttons">
                        {{! se a tag "a" não tiver classe, os links tem um efeito no top e no bottom quando clicado }}
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea.0.link}}}">{{{frontpage_buttons_configtextarea.0.label}}}</a>
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea.1.link}}}">{{{frontpage_buttons_configtextarea.1.label}}}</a>
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea_when_user_logged.0.link}}}">{{{frontpage_buttons_configtextarea_when_user_logged.0.label}}}</a>
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea_when_user_logged.1.link}}}">{{{frontpage_buttons_configtextarea_when_user_logged.1.label}}}</a>
                    </div>
                    <div class="frontpage-navbar-end-buttons">
                        <select>
                            <option value="pt-br">🇧🇷</option>
                            <option value="es">🇪🇸</option>
                            <option value="en">🇺🇸</option>
                        </select>
                        <span></span>
                        <a href="{{config.wwwroot}}/auth/suap/" class="primary-button">Acessar</a>
                    </div>
                </div>
            </nav>
        </div>
    {{/isloggedin}}
    {{^isloggedin}}
        <div class="frontpage-menu bg-green">
            <div class="frontpage-menu-logo">
                <h2>{{{frontpage_title}}}</h2 >
            </div>
            <nav class="frontpage-navbar-container" aria-label="{{#str}}sitemenubar, admin{{/str}}">
                <div class="frontpage-navbar-content">
                    <div class="frontpage-navbar-start-buttons">
                        {{! se a tag "a" não tiver classe, os links tem um efeito no top e no bottom quando clicado }}
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea.0.link}}}">{{{frontpage_buttons_configtextarea.0.label}}}</a>
                        <a class="aaa" href="{{config.wwwroot}}{{{frontpage_buttons_configtextarea.1.link}}}">{{{frontpage_buttons_configtextarea.1.label}}}</a>
                    </div>
                    <div class="frontpage-navbar-end-buttons">
                        <select>
                            <option value="pt-br">🇧🇷</option>
                            <option value="es">🇪🇸</option>
                            <option value="en">🇺🇸</option>
                        </select>
                        <span></span>
                        <a href="{{config.wwwroot}}/auth/suap/" class="primary-button">Acessar</a>
                    </div>
                </div>
            </nav>
        </div>
    {{/isloggedin}}


    <div {{#isloggedin}}class="content-when-sidebar-opened"{{/isloggedin}} id="sidebar-area" >
        <div id="page" data-region="mainpage" data-usertour="scroller" class="drawers drag-container bg-green">
        <div class="container-fluid">   
            <div class="row">
                <div class="col-md-12">
                    <div class="frontpage-hero-header">
                        <div class="frontpage-hero-header-content">
                            <h1>{{{hero_title}}}</h1>
                            <h5>{{{hero_subtitle}}}</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row hero">
                <div class="col-md-3">
                    <div class="frontpage-hero-header-column">
                        <p class="frontpage-hero-header-column-number text-green">{{{hero_first_column_number}}}</p>
                        <p class="frontpage-hero-header-column-title">{{{hero_first_column_description}}}</p>
                        <p class="frontpage-hero-header-column-text">{{{hero_first_column_text}}}</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="frontpage-hero-header-column">
                        <p class="frontpage-hero-header-column-number text-green">{{{hero_second_column_number}}}</p>
                        <p class="frontpage-hero-header-column-title">{{{hero_second_column_description}}}</p>
                        <p class="frontpage-hero-header-column-text">{{{hero_second_column_text}}}</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="frontpage-hero-header-column">
                        <p class="frontpage-hero-header-column-number text-green">{{{hero_third_column_number}}}</p>
                        <p class="frontpage-hero-header-column-title">{{{hero_third_column_description}}}</p>
                        <p class="frontpage-hero-header-column-text">{{{hero_third_column_text}}}</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="frontpage-hero-header-column">
                        <p class="frontpage-hero-header-column-number text-green">{{{hero_fourth_column_number}}}</p>
                        <p class="frontpage-hero-header-column-title">{{{hero_fourth_column_description}}}</p>
                        <p class="frontpage-hero-header-column-text">{{{hero_fourth_column_text}}}</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="topofscroll" class="bg-green">
            <section id="region-main" aria-label="{{#str}}content{{/str}}" class="bg-green">
                <div class="container-fluid">
                    <div class="frontpage-hero-main-header">
                        <div class="frontpage-hero-main-header-about-button">
                            <a class="primary-button">{{{hero_button_text}}}</a>
                        </div>
                        <div class="frontpage-hero-main-header-content">
                            <div class="frontpage-hero-main-header-title">
                                <p>{{{frontpage_main_courses_title}}}</p>
                            </div>

                            <div class=frontpage-hero-main-header-filter>
                                <div>
                                    <i class="fa fa-search"></i>
                                    <input type="text" placeholder="Pesquisar" id="search">
                                </div>
                                <button id="filter-courses" class="primary-button">
                                    Filtrar
                                    <span id="filter-badge" class="filter-badge" style="display: none;">0</span>
                                </button>
                            </div>

                            <div class="frontpage-hero-main-header-title aux">
                                <p>{{{frontpage_main_courses_title}}}</p>
                            </div>
                        </div>
                    </div>

                    {{{ output.main_content }}}

                    <div class="pagination">
                        <button id="prev-page" class="pagination-button" page="0">
                            <img src="{{config.wwwroot}}/theme/suap/pix/arrow-back-outline.svg" alt="Anterior">
                            Anterior
                        </button>
                        {{! <span id="page-info"></span> }}
                        <span id="pagination-numbers"></span>
                        <button id="next-page" class="pagination-button" page="0">
                            Próximo
                            <img src="{{config.wwwroot}}/theme/suap/pix/arrow-forward-outline.svg" alt="Próximo">
                        </button>
                    </div>
                </div>
            </section>
            {{! <div id="page-content" class="d-print-block main-inner bg-green">
                <div id="region-main-box">
                </div>
            </div> }}
        </div>
        
        {{> theme_boost/footer }}
        </div>
        
        
    </div>
    
    {{> theme_suap/footer}}

    <div class="modal-overlay" id="modal-overlay"></div>

    <div class="filter-area" id="filter-area">
        <div class="filter-header">
            <span class="filter-header-title">Filtros</span>
            <button id="close-filter" class="filter-header-close-button">
                <img src="{{config.wwwroot}}/theme/suap/pix/close.svg" alt="Fechar">
            </button>
        </div>
        <div class="filter-content">
            <div class="filter-content-workload-column">
                <h5 class="filter-content-column-title">Carga Horária</h5>
                <label><input type="checkbox" value="10"> até 10 horas</label>
                <label><input type="checkbox" value="20"> até 20 horas</label>
                <label><input type="checkbox" value="30"> até 30 horas</label>
                <label><input type="checkbox" value="40"> até 40 horas</label>
                <label><input type="checkbox" value="50"> até 50 horas</label>
                <label><input type="checkbox" value="60"> até 60 horas</label>
                <label><input type="checkbox" value="70"> até 70 horas</label>
                <label><input type="checkbox" value="80"> até 80 horas</label>
            </div>
            <div class="filter-content-certificate-column">
                <h5 class="filter-content-column-title">Certificado</h5>
                <label><input type="checkbox" value="Sim"> Sim</label>
                <label><input type="checkbox" value="Não"> Não</label>
            </div>
            <div class="filter-content-lang-column">
                <h5 class="filter-content-column-title">Idioma</h5>
                <label><input type="checkbox" value="pt_br"> Português</label>
                <label><input type="checkbox" value="es"> Espanhol</label>
                <label><input type="checkbox" value="en"> Inglês</label>
            </div>
            <div class="filter-content-learningpath-column">
                <h5 class="filter-content-column-title">Trilha</h5>
                {{#learningpaths}}
                    <label><input type="checkbox" value="{{id}}"> {{name}}</label>
                {{/learningpaths}}
            </div>
        </div>
        <div class="filter-footer">
            <button id="clear-filter" class="filter-footer-clear-button">Limpar Seleção</button>
            <button id="apply-filter" class="filter-footer-apply-button">Aplicar Filtros</button>
    </div>
</div>

</body>
</html>

{{#js}}
require(
[
    'jquery',
    'core_message/message_popover'
],
function($, Popover) {
    var toggle = $('#message-drawer-toggle-{{uniqid}}');
    Popover.init(toggle);
});
{{/js}}


{{#js}}
require(['theme_suap/drawersControl'], (module) => module.init());

require(['theme_suap/userPreference'], (module) => module.init());

require(['theme_suap/messages'], (module) => module.renderUnreadCount());

require(['theme_suap/notifications'], (module) => module.init());

const drawerNotification = document.querySelector('[data-drawer="drawer-notifications"]');

require(['jquery', 'message_popup/notification_popover_controller'], function($, Controller) {
    var container = $('.popover-region-notifications');
    var controller = new Controller(container);
    controller.registerEventListeners();
    controller.registerListNavigationEventListeners();
});
{{/js}}


{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader', 'theme_boost/drawer'], function(Loader, Drawer) {
    Drawer.init();
    M.util.js_complete('theme_boost/loader');
});
{{/js}}


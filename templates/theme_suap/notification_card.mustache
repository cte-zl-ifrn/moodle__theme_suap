{{!
    @template theme_suap/notification_card

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        notifications: {
            "id": 4,
            "fullmessage": "Full message notification",
            "shortenedsubject": "Short message notification",
            "timecreatedpretty": "1 day 15 hours ago",
            "useridfrom": 2,
            "useridto": 3,
            "read": false
        }
    }
}}

{{#notifications}}
    <div class="notification_card {{^read}}unread{{/read}}" data-region="notification-shortened" data-id="{{id}}">
        <h3 class="card-title">{{shortenedsubject}}</h3>
        <div class="card-bottom">
            <span class="card-time">{{timecreatedpretty}}</span>
            <span class="card-showmore">{{#str}} viewmore, core{{/str}}</span>
        </div>
    </div>
{{/notifications}}

<div class="notification-full hidden" data-region="notification-full"></div>

{{^notifications}}
    <div class="empty-message" data-region="empty-message">
        {{#str}} nonotifications, message {{/str}}
    </div>
{{/notifications}}
